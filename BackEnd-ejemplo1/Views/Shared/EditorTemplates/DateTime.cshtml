@model DateTime?
@if (!Model.HasValue)
{
    <input type="date" id="@ViewData.TemplateInfo.GetFullHtmlFieldId("")"
           name="@ViewData.TemplateInfo.GetFullHtmlFieldName("")" />
}
else
{
    <input type="date" value="@Model.Value.ToString("yyy-MM-dd")"
           id="@ViewData.TemplateInfo.GetFullHtmlFieldId("")"
           name="@ViewData.TemplateInfo.GetFullHtmlFieldName("")" />
}